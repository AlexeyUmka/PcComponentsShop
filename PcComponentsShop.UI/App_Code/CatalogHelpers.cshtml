@helper ShowGoods(IEnumerable<PcComponentsShop.Domain.Core.Basic_Models.Good> goods)
{
    <div class="row">
        @foreach (PcComponentsShop.Domain.Core.Basic_Models.Good g in goods)
        {
            <div class="col-sm-6 col-md-4 col-xl-3 p-0">
                <div class="card h-100 goodCard">
                    <img class="card-img-top goodImg" src="@g.ImgSrc" alt="CorpusImage">
                    <div class="card-body goodBody">
                        <h4 class="card-title">@g.FullName</h4>
                        Производитель: <b>@g.Brand</b>
                        <p class="card-text goodBuyPrice">@g.Price Грн</p>
                        <a href="#" class="btn btn-success goodBuyButton">Buy<i class="fa fa-shopping-basket"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
}
@helper ShowComputerCase(PcComponentsShop.Domain.Core.Basic_Models.Good good)
{
PcComponentsShop.Domain.Core.Basic_Models.ComputerCase computerCase = (PcComponentsShop.Domain.Core.Basic_Models.ComputerCase)good;
    <p>@computerCase.FormFactor</p>
}